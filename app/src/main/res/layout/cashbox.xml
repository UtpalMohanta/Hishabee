<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
            android:id="@+id/linear_balance_card"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/border_bg"
            android:gravity="center">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/img_wallet_balance" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/font_family"
                    android:layout_width="86dp"
                    android:layout_height="20dp"
                    android:text="@string/total_balance"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_total_balance"
                        style="@style/font_family"
                        android:layout_width="80dp"
                        android:layout_height="0dp"
                        android:text="@string/amount"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    <TextView
        android:id="@+id/tv_account"
        style="@style/font_family"
        android:layout_width="105dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/all_account"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_balance_card" />

    <androidx.cardview.widget.CardView
            android:id="@+id/cv_cash_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_account">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/all_account_bg">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_cash" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/font_family"
                        android:layout_width="30dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/account_name"
                        android:textSize="14sp"
                        android:textStyle="normal" />


                        <TextView
                            android:id="@+id/tv_cash_balance"
                            style="@style/font_family"
                            android:layout_width="68dp"
                            android:layout_height="30dp"
                            android:text="@string/amount"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/new_account"
        android:layout_width="164dp"
        android:layout_height="72dp"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/new_account_bg"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/cv_cash_card"
        app:layout_constraintStart_toStartOf="@+id/cv_cash_card"
        app:layout_constraintTop_toBottomOf="@+id/cv_cash_card">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_new_acc" />

        <TextView
            style="@style/font_family"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:text="@string/new_account"
            android:textColor="@color/TertiaryColor300"
            android:textSize="16sp"
            android:textStyle="normal" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:drawableStart="@drawable/ic_cash_out"
        android:text="@string/btn_cash_out"
        android:paddingStart="8dp"
        android:layout_marginStart="2dp"
        android:textColor="@color/Tertiaryalert"
        app:layout_constraintTop_toBottomOf="@+id/new_account"
        tools:layout_editor_absoluteX="38dp">
    </androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>